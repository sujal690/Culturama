@model Registration


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url('https://img.freepik.com/free-vector/background-template-with-mandala-designs_1308-69608.jpg?w=1060&t=st=1711952639~exp=1711953239~hmac=691a6ff425766a875c2289d5c25a9694d9b4000c44fa07741f27170ae8e84e49 ');
            background-size: cover;
            background-repeat: no-repeat;
        }

        
        .form-container {
            padding: 20px;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0); 
            box-shadow: 0 0 10px rgba(0, 0, 0, 0); 
        }

        .form-control {
            width: 100%;
            margin-bottom: 10px;
        }

        .rounded {
            border-radius: 8px;
            background-color: #fff;
            padding: 10px;
        }

        .glowing-border:focus {
            border: 2px solid #FF9933; 
            outline: none;
            box-shadow: 0 0 10px #FF9933; 
        }

        .glowing-button {
            background-color: #FF9933; 
            border: none;
            color: #fff;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            transition: background-color 0.3s, box-shadow 0.3s;
        }

            .glowing-button:hover {
                background-color: #FFB74D; 
                box-shadow: 0 0 20px #FFB74D;
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <form asp-action="Login" method="post" class="needs-validation">
                        <div class="mb-3 form-group rounded">
                            <label asp-for="email" class="form-label">Email address</label>
                            <input asp-for="email" class="form-control glowing-border" required />
                        </div>
                        <div class="mb-3 form-group rounded">
                            <label asp-for="password" class="form-label">Password</label>
                            <input asp-for="password" class="form-control glowing-border" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block glowing-button">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
